<header id="booking" class="masthead d-flex align-items-center">
    <div class="container px-4 px-lg-5 text-center">
        <div class="card text-white bg-primary mb-3">
        <div class="card-body">
        <h3 class="card-title">Book Your Table</h3>
        <p class="card-text">Your unforgetable dining experience starts here.</p>
        <div class="form-group">
            <label for="exampleSelect1" class="form-label mt-2">People</label>
                <select class="form-select" id="exampleSelect1">
                    <option selected>Choose...</option>
                    <option>1 Person</option>
                    <option>2 People</option>
                    <option>3 People</option>
                    <option>4 People</option>
                    <option>5 People</option>
                </select>
        </div>

        <div class="form-group">
            <label for="exampleSelect1" class="form-label mt-2">Date</label>
                <input class="form-select" type="date">
        </div>

        <div class="form-group">
            <label for="exampleSelect1" class="form-label mt-2">Time</label>
                <select class="form-select" id="exampleSelect1">
                    <option selected>Choose...</option>
                    <option>6:30 PM</option>
                    <option>7:00 PM</option>
                    <option>7:30 PM</option>
                    <option>8:00 PM</option>
                    <option>8:30 PM</option>
                    <option>9:00 PM</option>
                </select>
        </div>
        <a class="btn btn-outline-warning btn-xl mt-2" href="/booked">Book Your table</a>
        </div>
        </div>

        
    </div>
</header>